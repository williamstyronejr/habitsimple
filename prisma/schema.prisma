generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Habit {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  description    String?
  lastCompleted  String?
  completedCount Int     @default(0) @map("completed_count")

  @@map("habits")
}
